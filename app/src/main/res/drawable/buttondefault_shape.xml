<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"

    >
    <gradient
        android:startColor="@android:color/holo_blue_bright"
        android:centerColor="@android:color/holo_purple"
       android:endColor="@android:color/holo_red_light"
        android:angle="45"
        android:type="linear"
        android:gradientRadius="10dp"/>

    <padding
        android:left="2dp"
        android:bottom="5dp"
        android:right="2dp"
        android:top="2dp">

    </padding>
    <size
        android:height="60dp"
        android:width="270dp"/>
    <stroke
        android:color="#192A56"
        android:width="2dp"/>
    <corners
        android:radius="40dp"/>


</shape>